{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col">
            {{ form_start(form) }}

            {{ form_errors(form) }}
            <div class="form-group">
                {{ form_row(form.email) }}
            </div>
            <div class="form-group">
                {{ form_row(form.pseudo) }}
            </div>
            <div class="form-group">
                {{ form_row(form.plainPassword.first) }}
            </div>
            <div class="form-group">
                {{ form_row(form.plainPassword.second) }}
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-sm">Register</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
